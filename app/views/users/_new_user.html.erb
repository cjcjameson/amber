

<%= form_for @user, url: {action: "create"}, html: {class: "new_user_form"} do |f| %>

  <% if @user.errors.any? %>  
    <div class="error_messages">  
      <h2 class="red underlined center_align">Form is invalid</h2>  
      <ul>  
        <% @user.errors.full_messages.each do |message| %>  
          <li class="red center_align no_list_style"><%= message %></li>  
        <% end %>  
      </ul>  
    </div>  
  <% end %>

  <span class="block right_align right_margin">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </span>

  <span class="block right_align right_margin">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </span>

  <span class="block right_align right_margin">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </span>

  <span class="block right_align right_margin">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
  </span>

  <span class="block right_align right_margin">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </span>

  <span class="block right_align right_margin">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </span>

  <span class="block right_align right_margin">
    <%= f.submit "Create" %>
  </span>
<% end %>